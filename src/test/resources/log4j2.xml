<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <properties>
        <Property name="LOG_HOME">${sys:user.home:-}/log</Property>
        <Property name="APPLICATION_NAME">retry</Property>
        <!--日志时间戳-->
        <Property name="LOG_DATEFORMAT_PATTERN">yyyy-MM-dd'T'HH:mm:ss.SSSXXX</Property>
        <!--控制台日志格式: '时间戳 日志级别 进程ID -&#45;&#45; [线程名] 类名 : 日志内容'-->
        <Property name="CONSOLE_LOG_PATTERN">%d{${sys:LOG_DATEFORMAT_PATTERN}} %5p %pid --- [%15.15t] %-40.40c{1.} : %m%n</Property>
    </properties>

    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="${CONSOLE_LOG_PATTERN}"/>
            <filters>
                <ThresholdFilter level="TRACE" onMatch="NEUTRAL" onMismatch="DENY"/>
                <ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="ACCEPT"/>
            </filters>
        </Console>

        <Console name="CONSOLE_ERR" target="SYSTEM_ERR">
            <PatternLayout pattern="${CONSOLE_LOG_PATTERN}"/>
            <filters>
                <ThresholdFilter level="ERROR"/>
            </filters>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="TRACE">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="CONSOLE_ERR"/>
        </Root>
    </Loggers>
</Configuration>